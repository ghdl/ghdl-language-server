{
	"name": "vhdl-lsp",
	"description": "VHDL language server",
	"author": "Tristan Gingold",
	"license": "GPL-2.0-or-later",
	"version": "0.1.0-dev",
	"repository": {
		"type": "git",
		"url": "https://github.com/ghdl/ghdl-language-server"
	},
	"publisher": "tgingold",
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"vhdl"
	],
	"activationEvents": [
		"onLanguage:vhdl"
	],
	"main": "./extension",
	"contributes": {
		"languages": [
			{
				"id": "vhdl",
				"aliases": [
					"VHDL",
					"vhdl"
				],
				"extensions": [
					".vhdl",
					".vhd"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vhdl",
				"scopeName": "source.vhdl",
				"path": "./syntaxes/syntaxes.vhdl.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "vhdl",
				"path": "./snippets/snippets.vhdl.declaration.json"
			},
			{
				"language": "vhdl",
				"path": "./snippets/snippets.vhdl.generate.json"
			},
			{
				"language": "vhdl",
				"path": "./snippets/snippets.vhdl.interface.json"
			},
			{
				"language": "vhdl",
				"path": "./snippets/snippets.vhdl.library.json"
			},
			{
				"language": "vhdl",
				"path": "./snippets/snippets.vhdl.logic.json"
			}
		],
		"commands": [
			{
				"command": "ghdl-ls.showallfiles",
				"title": "Show all source files"
			},
			{
				"command": "ghdl-ls.instantiate-entity",
				"title": "vhdl: Instantiate an entity"
			},
			{
				"command": "ghdl-ls.shownode",
				"title": "Show node info"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "ghdl-ls.shownode",
					"when": "editorTextFocus && resourceLangId == vhdl"
				}
			]
		},
		"configurationDefaults": {
			"[vhdl]": {
				"files.encoding": "iso88591"
			}
		},
		"configuration": {
			"title": "Vhdl",
			"properties": {
				"vhdl.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"vhdl.debugLSP": {
					"scope": "window",
					"type": "boolean",
					"default": false,
					"description": "Increase log verbosity and trace the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode none",
		"watch": "webpack --mode none --watch",
		"test-compile": "tsc -p ./",
		"tsc-compile": "tsc -b",
		"tsc-watch": "tsc -b -w"
	},
	"engines": {
		"vscode": "^1.63.0"
	},
	"devDependencies": {
		"@types/node": "^16.11.12",
		"@types/vscode": "^1.63.0",
		"ts-loader": "^9.2.6",
		"tslint": "^6.1.3",
		"typescript": "^4.5.4",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}
