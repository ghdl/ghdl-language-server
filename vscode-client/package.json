{
	"name": "vhdl-lsp",
	"description": "VHDL language server",
	"author": "Tristan Gingold",
	"license": "GPL-2.0-or-later",
	"version": "0.1.0-dev",
	"repository": {
		"type": "git",
		"url": "https://github.com/ghdl/ghdl-language-server"
	},
	"publisher": "tgingold",
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"vhdl"
	],
	"activationEvents": [
		"onLanguage:vhdl"
	],
	"main": "./extension",
	"contributes": {
		"languages": [
			{
				"id": "vhdl",
				"aliases": [
					"VHDL",
					"vhdl"
				],
				"extensions": [
					".vhdl",
					".vhd"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vhdl",
				"scopeName": "source.vhdl",
				"path": "./syntaxes/vhdl.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "vhdl",
				"path": "./snippets/vhdl-snippets.json"
			}
		],
		"commands": [
			{
				"command": "ghdl-ls.showallfiles",
				"title": "Show all source files"
			},
			{
				"command": "ghdl-ls.instantiate-entity",
				"title": "Instantiate an entity"
			},
			{
				"command": "ghdl-ls.shownode",
				"title": "Show node info"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "ghdl-ls.shownode",
					"when": "editorTextFocus && resourceLangId == vhdl"
				}
			]
		},
		"configurationDefaults": {
			"[vhdl]": {
				"files.encoding": "iso88591"
			}
		},
		"configuration": {
			"type": "object",
			"title": "Vhdl configuration",
			"properties": {
				"vhdl.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"vhdl.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"devDependencies": {
		"@types/node": "^8.10.25",
		"@types/vscode": "^1.34.0",
		"tslint": "^5.16.0",
		"typescript": "^3.5.1"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1"
	}
}
